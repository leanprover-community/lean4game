# Environment Variables for Lean4Game
# Copy this file to .env and modify the values as needed

# Backend server port inside container (default: 8080)
PORT=8080

# Host port to expose the application (default: 8080)
# This is the port you'll access from your browser
HOST_PORT=8080

# Client development server port (default: 3000)
CLIENT_PORT=3000

# Default language for the application (default: en)
# Supported languages: en, zh, etc.
VITE_CLIENT_DEFAULT_LANGUAGE=en

# Node environment (development, production, test)
NODE_ENV=development