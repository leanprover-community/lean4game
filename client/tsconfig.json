{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2021.String",
      "DOM"
    ]
  },
  "include": [
    "./src/",
    "./src/config.json",
  ]
}
